#!/usr/bin/env bash

set -e

git checkout api-for-react
git fetch origin
git pull origin api-for-react

echo "##############################################"
echo "##############################################"
echo "##############################################"
echo "################SERVER IP#####################"
echo "$(ifconfig en0 | grep 'inet ' | awk '{print $2}')"
echo "$(ifconfig en1 | grep 'inet ' | awk '{print $2}')"
echo "##############################################"
echo "##############################################"
echo "##############################################"
echo "##############################################"

echo "##############################################"
echo "##############################################"
echo "##############################################"
echo "##################PORTS#######################"
echo "$(seq 3001 3035)"
echo "##############################################"
echo "##############################################"
echo "##############################################"
echo "##############################################"


docker-compose down --rmi all
docker-compose up --scale web=35
